{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["DOM", "esnext"],                                        
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "baseUrl": "./",                                  
    "paths": {
      "src": ["./lib"]
    },                                      
    "rootDir": "./lib",                                   
    "resolveJsonModule": true,                        
    "outDir": "./src",                                  
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["./lib/**/*.ts"],
  "exclude": []
}
